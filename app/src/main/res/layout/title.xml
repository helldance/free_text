<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:paddingLeft="5dp"
	android:gravity="center_vertical">

	<TextView
		android:id="@+id/left"
		android:text="@string/app_name"
		android:textSize="15dp"
		android:textStyle="bold"
		android:textColor="#FFFFFF"
		android:shadowColor="#BB000000"
		android:shadowRadius="2.75"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_weight="1" />

	<ImageView
		android:id="@+id/refresh_separator"
		android:layout_width="1dp"
		android:layout_height="fill_parent"
		android:background="#15ffffff" />

	<ImageButton
		android:id="@+id/t_setting"
		android:onClick="openSetting"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="7.5dp"
		android:background="@drawable/setting_selector"
		 />

	<ImageView
		android:id="@+id/search_separator"
		android:layout_width="1dp"
		android:layout_height="fill_parent"
		android:background="#15ffffff" />

	<ImageButton
		android:id="@+id/t_help"
		android:onClick="openHelp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="4dp"
		android:background="@drawable/help_selector"
		 />

</LinearLayout>
